
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="utf-8"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
      data-template="vertical-menu-template-free">

      @await Html.PartialAsync("/Views/AdminLayout/PartialHeader.cshtml")
<script>
    function deleteItem(itemId) {
        Swal.fire({
            title: 'Silmek istediğinden emin misin?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                // Silme işlemi yapmak için gereken kodu burada yazabilirsin
                const deleteUrl = `${itemId}`;
                window.location.href = deleteUrl;
            }
        });
    }
</script>
<body>
    <script>
        function deleteItem(itemId) {
            Swal.fire({
                title: 'Silmek istediğinden emin misin?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Silme işlemi yapmak için gereken kodu burada yazabilirsin
                    const deleteUrl = `${itemId}`;
                    window.location.href = deleteUrl;
                }
            });
        }
    </script>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

                @await Html.PartialAsync("/Views/AdminLayout/PartialAppBrandDemo.cshtml")

                <div class="menu-inner-shadow"></div>

                @await Html.PartialAsync("/Views/AdminLayout/PartialSidebar.cshtml") 

            </aside>
            <div class="layout-page">

                @await Html.PartialAsync("/Views/AdminLayout/PartialNavbar.cshtml")

                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">

                        @RenderBody()

                    </div>

                    @await Html.PartialAsync("/Views/AdminLayout/PartialFooter.cshtml")

                    <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    @await Html.PartialAsync("/Views/AdminLayout/PartialScripts.cshtml")

</body>
</html>
