@model List<Traversal.EntityLayer.Concrate.ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container mt-4">
    <div class="card">
        <h5 class="card-header bg-primary text-white">Gelen Mesajlar</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Mail</th>
                        <th>Konu</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            @{
                                count += 1;
                            }
                            <td>@count</td>

                            <td>@item.Name</td>
                            <td>@item.Mail</td>
                            <td>@item.Subject</td>
                            <td>@item.MessageDate.ToString("MMMM dd")</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" onclick="deleteItem('/Admin/Message/DeleteMessage/@item.ContactUsID')" href="#"><i class="bx bx-trash me-1 text-danger"></i> Sil</a>
                                        <a class="dropdown-item" href="/Admin/Message/Reply/@item.ContactUsID"><i class="bx bx-reply me-1 text-success"></i> Yanıtla</a>
                                        <a class="dropdown-item" href="/Admin/Message/MessageDetails/@item.ContactUsID"><i class="bx bx-detail me-1 text-warning"></i> Detayları Gör</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
