@model List<Traversal.EntityLayer.Concrate.Reservation>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <div class="card">
        <h5 class="card-header bg-primary text-white">Onay Bekleyen Rezervasyonlar</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Şehir</th>
                        <th>İsim</th>
                        <th>Kişi Sayısı</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.Destination.City</td>
                            <td>@item.AppUser.Name</td>
                            <td>@item.PersonCount</td>
                            <td>@item.ReservationDate.ToString("MMMM dd")</td>
                            <td><a class="btn btn-success" href="/Admin/Destination/EditDestination/@item.DestinationID"><i class="bx bx-check me-1 text-white"></i> Onayla</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

