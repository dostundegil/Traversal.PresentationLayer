@model CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary">
            <h5 class="mb-0  text-white">Yeni Rol</h5>
        </div>
        <div class="card-body mt-2">
            <form method="post">
                <div class="row">
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Rol Adı</label>
                        <input type="text" asp-for="RoleName" class="form-control" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><span class="tf-icons bx bx-plus-circle"></span> Ekle</button>
                <a href="/Admin/Role/Index/" class="btn btn-danger"><span class="tf-icons bx bx-arrow-back"></span> Vazgeç </a>
            </form>
        </div>
    </div>
</div>
