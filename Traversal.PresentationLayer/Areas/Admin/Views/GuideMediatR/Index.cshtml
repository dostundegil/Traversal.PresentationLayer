@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <div class="card">
        <h5 class="card-header bg-primary text-white">CQRS MediatR Rehber Listesi</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Açıklama</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            @{
                                count += 1;
                            }
                            <td>@count</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>

                            <td>
                                <a class="btn btn-info" href="/Admin/GuideMediatR/GetGuide/@item.GuideID"><i class="bx bx-edit-alt me-1 text-white"></i> Düzenle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-3">
        <a href="/Admin/GuideMediatR/AddGuide/" class="btn btn-primary"><span class="tf-icons bx bx-plus-circle"></span>Yeni Rehber</a>
    </div>
</div>

