@model AnnouncementAddDTO

@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <h5 class="card-header">Yeni Duyuru</h5>
                    <!-- Account -->
                    <div class="card-body">
                        <form method="post">
                            <div class="row">
                                <div class="mb-3 col-md-12">
                                    <label for="firstName" class="form-label">Başlık</label>
                                    <input class="form-control"
                                           type="text"
                                           id="firstName"
                                           asp-for="Title"
                                           autofocus />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="mb-3 col-md-12">
                                    <label for="email" class="form-label">Duyuru İçeriği</label>
                                    <textarea class="form-control"
                                            rows="10" cols="10"  asp-for="Content"></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                                <div class="mt-2 ">
                                    <button type="submit" class="btn btn-primary me-2"><span class="tf-icons bx bx-plus-circle"></span>Ekle</button>
                                    <a href="/Admin/Announcement/Index/" class="btn btn-danger"><span class="tf-icons bx bx-arrow-back"></span> Vazgeç </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content-backdrop fade"></div>
</div>

