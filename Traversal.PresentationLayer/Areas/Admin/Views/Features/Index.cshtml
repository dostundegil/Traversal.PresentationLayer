@model List<Traversal.EntityLayer.Concrate.Feature>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <div class="card">
        <h5 class="card-header bg-primary text-white">Öne Çıkanlar</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Büyük Fotoğraf</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            @if (item.IsBigImage)
                            {
                                <td><span class="badge bg-label-primary me-1">Evet</span></td>
                            }
                            else
                            {
                                <td><span class="badge bg-label-dark me-1">Hayır</span></td>
                            }

                            @if (item.Status)
                            {
                                <td><span class="badge bg-label-success me-1">Aktif</span></td>
                            }
                            else
                            {
                                <td><span class="badge bg-label-danger me-1">Pasif</span></td>
                            }
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/Features/UpdateFeature/@item.FeatureID"><i class="bx bx-edit-alt me-1 text-warning"></i> Güncelle</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-3">
        <a href="/Admin/Features/AddFeature/" class="btn btn-primary"><span class="tf-icons bx bx-plus-circle"></span>Ekle</a>
      
    </div>
</div>