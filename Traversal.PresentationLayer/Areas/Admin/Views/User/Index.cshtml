@model List<Traversal.EntityLayer.Concrate.AppUser>
@{
    ViewData["Title"] = "Traversal | Admin Kullanıcılar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="container">
    <div class="card">
        <h5 class="card-header bg-primary text-white">Kullanıcılar</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Kullanıcı Adı</th>
                        <th>Mail</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @{
                                count += 1;
                            }
                            <td>@count</td>
                            <td>@item.Name</td>
                            <td>@item.UserName</td> 
                            <td>@item.Email</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/User/ReservationUser/@item.Id"><i class="bx bx-log-in-circle me-1 text-primary"></i> Rezervasyon Geçmişi</a>
                                        <a class="dropdown-item" onclick="deleteItem('/Admin/User/DeleteUser/@item.Id')" href="#"><i class="bx bx-trash me-1 text-danger"></i> Sil</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-3">
        <a href="/Login/SignUp/" class="btn btn-primary"><span class="tf-icons bx bx-plus-circle"></span>Yeni Kullanıcı</a>
    </div>
</div>

