@model Traversal.EntityLayer.Concrate.Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <h5 class="card-header">Referans Güncelle</h5>
                    <!-- Account -->
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="TestimonialID" />
                            <div class="card-body">
                                <div class="d-flex align-items-start align-items-sm-center gap-4">
                                    <img src="@Model.ClientImage"
                                         alt="user-avatar"
                                         class="d-block rounded"
                                         height="100"
                                         width="100"
                                         id="uploadedAvatar" />
                                </div>
                            </div>
                            <hr class="my-0" />
                            <div class="row mt-4">
                                <div class="mb-3 col-md-6">
                                    <label for="firstName" class="form-label">Ad Soyad</label>
                                    <input class="form-control"
                                           type="text"
                                           id="firstName"
                                           asp-for="Client"
                                           autofocus />
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="firstName" class="form-label">Fotoğraf URL</label>
                                    <input class="form-control"
                                           type="text"
                                           id="firstName"
                                           asp-for="ClientImage"
                                           autofocus />
                                </div>
                                <div class="mb-3 col-md-12">
                                    <label for="organization" class="form-label">Yorum</label>
                                    <textarea asp-for="Comment" rows="4" cols="5" class="form-control"></textarea>
                                </div>
                                <div class="mt-2">
                                    <button type="submit" class="btn btn-primary me-2"><span class="tf-icons bx bx-refresh"></span>Ekle</button>
                                    <a href="/Admin/Testimonial/Index/" class="btn btn-danger"><span class="tf-icons bx bx-arrow-back"></span> Vazgeç </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content-backdrop fade"></div>
</div>

