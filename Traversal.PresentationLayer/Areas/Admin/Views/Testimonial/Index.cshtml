@model List<Traversal.EntityLayer.Concrate.Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <div class="card">
        <h5 class="card-header bg-primary text-white">Referanslar</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Fotoğraf</th>
                        <th>Ad Soyad</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            @{
                                count += 1;
                            }
                            <td>@count</td>
                            <td>
                                <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                    <li data-bs-toggle="tooltip"
                                        data-popup="tooltip-custom"
                                        data-bs-placement="top"
                                        class="avatar avatar-m pull-up"
                                        title="@item.Client">
                                        <img src="@item.ClientImage" alt="Avatar" class="rounded-circle" />
                                    </li>
                                </ul>
                            </td>

                            <td>@item.Client</td>
                            @if (item.Status == true)
                            {
                                <td><span class="badge bg-label-success me-1">Aktif</span></td>
                            }
                            @if (item.Status == false)
                            {
                                <td><span class="badge bg-label-danger me-1">Pasif</span></td>
                            }

                            <td>
                                <a class="btn btn-info" href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialID"><i class="bx bx-edit-alt me-1 text-white"></i> Düzenle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-3">
        <a href="/Admin/Testimonial/AddTestimonial/" class="btn btn-primary"><span class="tf-icons bx bx-plus-circle"></span>Yeni Referans</a>
    </div>
</div>

